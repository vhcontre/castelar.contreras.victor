<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - UAI</title>
</head>
<body>
    <div id="container">
        <!-- Cabecera -->
        <header>
            <img class="logo" src="/content/img/logo.gif" alt="Logo de la Institución" />
            <nav>
                <ul>
                    <li><a href="/">Principal</a> </li>
                    <li><a href="/Home/Contact">Contacto</a> </li>
                    <li><a href="/Home/About">Acerca de</a> </li>
                </ul>
            </nav>
        </header>
        <!-- Contenido -->
        <section>
            <article>
                @RenderBody()
            </article>
        </section>

        <!-- Contenido relacionado-->
        <aside id="pub">
            <article>
                <div>
                    <h3>Sidebar</h3>
                    <div>
                        
                    </div>
                </div>
            </article>

        </aside>
        <!-- Pie de pagina -->
        <footer>
            <p>&copy; @DateTime.Now.Year - Universidad Abierta Interamericana</p>
        </footer>
    </div>
    @RenderSection("scripts", required: false)
</body>
</html>